		<url-pattern>/rest/*</url-pattern> </servlet-mapping> -->
	<!-- For file servlet, which serves all the uploaded files as src attribute -->
	<servlet>
		<display-name>FileServlet</display-name>
		<servlet-name>FileServlet</servlet-name>
		<servlet-class>com.lok.servlet.FileServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>FileServlet</servlet-name>
		<url-pattern>/fileservlet/*</url-pattern>
	</servlet-mapping>

	<!-- Configurations for jersey provided JSP pages -->
