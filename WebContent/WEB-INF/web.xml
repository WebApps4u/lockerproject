		<init-param> <param-name>jersey.config.server.mvc.templateBasePath.jsp</param-name> 
		<param-value>/WEB-INF/jsp</param-value> </init-param> <init-param> <param-name>jersey.config.server.provider.classnames</param-name> 
		<param-value>org.glassfish.jersey.server.mvc.jsp.JspMvcFeature</param-value> 
		</init-param> <init-param> <param-name>jersey.config.server.tracing</param-name> 
		<param-value>ALL</param-value> </init-param> <init-param> <param-name>jersey.config.servlet.filter.staticContentRegex</param-name> 
		<param-value>/*</param-value> </init-param> </filter> <filter-mapping> <filter-name>jersey</filter-name> 
		<url-pattern>/*</url-pattern> </filter-mapping> -->
	<filter>
		<filter-name>jersey</filter-name>
		<filter-class>org.glassfish.jersey.servlet.ServletContainer</filter-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.lok.config.MyApplication</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.mvc.templateBasePath.jsp</param-name>
			<param-value>/</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.provider.classnames</param-name>
			<param-value>org.glassfish.jersey.server.mvc.jsp.JspMvcFeature</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.tracing</param-name>
			<param-value>ALL</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.servlet.filter.staticContentRegex</param-name>
			<param-value>/*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>jersey</filter-name>
		<url-pattern>/upload/test/*</url-pattern>
	</filter-mapping>

</web-app>